@model IEnumerable<pastomatai.Models.PostMachine>

@{
    ViewData["Title"] = "Index";
}

<h1>Post Machines</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by city: <input type="text" name="SearchString" value="@ViewData["currentFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                On
            </th>
            <th>
                State
            </th>
            <th>
                City
            </th>
            <th>
                Worker
            </th>
            <th>
                Courier
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TurnedOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostMachineState)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FkAddressidAddressNavigation.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FkLoggedInUseridEndUser1Navigation.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FkLoggedInUseridEndUserNavigation.Email)
            </td>
            <td>
                <a asp-action="Activate" asp-route-id="@item.IdPostMachine">@(item.TurnedOn ? "Turn off" : "Turn on")</a> |
                <a asp-action="Details" asp-route-id="@item.IdPostMachine">Details</a> |
                <a asp-action="Serve" asp-route-id="@item.IdPostMachine">Serve</a>
                <a asp-action="Edit" asp-route-id="@item.IdPostMachine">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.IdPostMachine">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
