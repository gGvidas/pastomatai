@model pastomatai.Models.EndUser

@{
    ViewData["Title"] = "RegisterForm";
}

<h1>RegisterForm</h1>

<h4>EndUser</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RegisterForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
