            <div class="form-group">
                <label asp-for="FkAddressidAddress" class="control-label"></label>
                <select asp-for="FkAddressidAddress" class ="form-control" asp-items="ViewBag.FkAddressidAddress"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

